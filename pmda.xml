<?xml version="1.0"?>
<Container version="2">
  <Name>PMDA</Name>
  <Repository>meaning/pmda:latest</Repository>
  <Registry>https://hub.docker.com/r/meaning/pmda</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>

  <Support>https://github.com/silkyclouds/PMDA/issues</Support>
  <Project>https://github.com/silkyclouds/PMDA</Project>
  <Overview>PMDA: Plex Music DeDupe Assistant – detect and clean duplicate albums in your Plex music library with optional AI assistance.</Overview>
  <Category>MediaApp:Music</Category>
  <WebUI>http://[IP]:[PORT:WEBUI_PORT]/</WebUI>
  <Icon>https://raw.githubusercontent.com/silkyclouds/PMDA/main/static/P.png</Icon>

  <!-- ────────── REQUIRED VARIABLES ────────── -->
  <Config Name="PLEX_HOST"
          Target="PLEX_HOST"
          Default="http://192.168.3.2:32400"
          Description="Base URL of your Plex server, including port."
          Type="Variable" Display="always" Required="true" />

  <Config Name="PLEX_TOKEN"
          Target="PLEX_TOKEN"
          Default=""
          Description="Your Plex API token (X-Plex-Token)."
          Type="Variable" Display="always" Required="true" Mask="true" />

  <Config Name="SECTION_ID"
          Target="SECTION_ID"
          Default="1"
          Description="Numeric ID of your Plex Music library section."
          Type="Variable" Display="always" Required="true" />

  <Config Name="PATH_MAP"
          Target="PATH_MAP"
          Default="{&quot;/music&quot;:&quot;/path/to/music&quot;}"
          Description="JSON mapping each Plex path → its PMDA path."
          Type="Variable" Display="always" Required="true" />

  <!-- Mode -->
  <Config Name="PMDA_DEFAULT_MODE"
          Target="PMDA_DEFAULT_MODE"
          Default="serve"
          Description="'serve' for Web UI, 'cli' for command-line."
          Type="Variable" Display="always" Required="true" />

  <!-- ────────── AI (optional) ────────── -->
  <Config Name="OPENAI_MODEL"
          Target="OPENAI_MODEL"
          Default="gpt-4o-nano"
          Description="LLM model for smart duplicate selection."
          Type="Variable" Display="always" Required="false" />

  <Config Name="OPENAI_API_KEY"
          Target="OPENAI_API_KEY"
          Default=""
          Description="OpenAI API key – leave blank to disable AI."
          Type="Variable" Display="always" Required="false" Mask="true" />

  <!-- Behaviour & logging -->
  <Config Name="LOG_LEVEL"
          Target="LOG_LEVEL"
          Default="INFO"
          Description="DEBUG, INFO, WARNING, ERROR."
          Type="Variable" Display="advanced" Required="false" />

  <Config Name="SCAN_THREADS"
          Target="SCAN_THREADS"
          Default="8"
          Description="Parallel scanner threads."
          Type="Variable" Display="advanced" Required="false" />

  <!-- ────────── VOLUMES ────────── -->
  <Config Name="CONFIG_DIR"
          Target="/app/config"
          Default="/path/to/appdata/pmda"
          Mode="rw"
          Description="Holds config.json, state.db, cache.db."
          Type="Path" Display="always" Required="true" />

  <Config Name="PLEX_DB_VOLUME"
          Target="/database"
          Default="/path/to/plex/Plug-in Support/Databases"
          Mode="ro"
          Description="Mount point for Plex DB folder."
          Type="Path" Display="always" Required="true" />

  <Config Name="MUSIC_FOLDER"
          Target="/music"
          Default="/path/to/music"
          Mode="rw"
          Description="Primary music folder."
          Type="Path" Display="always" Required="true" />

  <Config Name="MUSIC_FOLDER_2"
          Target="/music2"
          Default="/path/to/music2"
          Mode="rw"
          Description="Second music folder (optional)."
          Type="Path" Display="always" Required="false" />

  <Config Name="MUSIC_FOLDER_3"
          Target="/music3"
          Default="/path/to/music3"
          Mode="rw"
          Description="Third music folder (optional)."
          Type="Path" Display="always" Required="false" />

  <Config Name="DUPE_OUTPUT"
          Target="/dupes"
          Default="/path/to/music/dupes"
          Mode="rw"
          Description="Where duplicate albums will be moved."
          Type="Path" Display="always" Required="true" />

  <!-- ────────── PORT (host-side configurable) ────────── -->
  <Config Name="WEBUI_PORT"
          Target="5005"
          Default="5005"
          Mode="tcp"
          Description="Host port mapped to container 5005 (Web UI)."
          Type="Port" Display="always" Required="true" />
</Container>
