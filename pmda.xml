<?xml version="1.0"?>
<Container version="2">
  <Name>PMDA</Name>
  <Repository>meaning/pmda:latest</Repository>
  <Registry>https://hub.docker.com/r/meaning/pmda</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>

  <Support>https://github.com/silkyclouds/PMDA/issues</Support>
  <Project>https://github.com/silkyclouds/PMDA</Project>
  <Overview>PMDA: Plex Music DeDupe Assistant – detect and clean duplicate albums in your Plex music library with optional AI assistance.</Overview>
  <Category>MediaApp:Music</Category>
  <WebUI>http://[IP]:[PORT:WEBUI_PORT]</WebUI>
  <Icon>https://raw.githubusercontent.com/silkyclouds/PMDA/main/static/P.png</Icon>

  <!-- ────────────── REQUIRED VARIABLES ────────────── -->
  <Config Name="Plex Host URL"
          Target="PLEX_HOST"
          Default="http://192.168.3.2:32400"
          Description="(Required) Base URL of your Plex server, including port."
          Type="Variable" Display="always" Required="true" />

  <Config Name="Plex Token"
          Target="PLEX_TOKEN"
          Default=""
          Description="(Required) Your Plex API token (X-Plex-Token)."
          Type="Variable" Display="always" Required="true" Mask="true" />

  <Config Name="Music Section ID"
          Target="SECTION_ID"
          Default="1"
          Description="(Required) Numeric ID of your Plex Music library section."
          Type="Variable" Display="always" Required="true" />

  <Config Name="Path Map"
          Target="PATH_MAP"
          Default="{&quot;/music&quot;:&quot;/path/to/music&quot;}"
          Description="(Required) JSON mapping each Plex-library container path to its corresponding PMDA container path."
          Type="Variable" Display="always" Required="true" />

  <!-- Mode Selection -->
  <Config Name="Default Mode"
          Target="PMDA_DEFAULT_MODE"
          Default="serve"
          Description="Choose 'serve' to launch the Web UI, or 'cli' for a command-line scan."
          Type="Variable" Display="always" Required="true" />

  <!-- ────────────── OPTIONAL AI SETTINGS ────────────── -->
  <Config Name="OpenAI Model"
          Target="OPENAI_MODEL"
          Default="gpt-4o-nano"
          Description="LLM model for intelligent duplicate selection."
          Type="Variable" Display="always" Required="false" />

  <Config Name="OpenAI API Key"
          Target="OPENAI_API_KEY"
          Default=""
          Description="OpenAI API key; leave blank to disable AI assistance."
          Type="Variable" Display="always" Required="false" Mask="true" />

  <!-- Behaviour & Logging -->
  <Config Name="Log Level"
          Target="LOG_LEVEL"
          Default="INFO"
          Description="Logging level: DEBUG, INFO, WARNING, ERROR."
          Type="Variable" Display="advanced" Required="false" />

  <Config Name="Scan Threads"
          Target="SCAN_THREADS"
          Default="8"
          Description="Number of parallel scanning threads."
          Type="Variable" Display="advanced" Required="false" />

  <!-- ────────────── VOLUME MAPPINGS ────────────── -->
  <Config Name="Config Directory"
          Target="/app/config"
          Default="/path/to/appdata/pmda"
          Mode="rw"
          Description="Host path for config.json, state.db, cache.db."
          Type="Path" Display="always" Required="true" />

  <Config Name="Plex DB Volume"
          Target="/database"
          Default="/path/to/plex/Plug-in Support/Databases"
          Mode="ro"
          Description="Mount point for Plex DB folder."
          Type="Path" Display="always" Required="true" />

  <Config Name="Music Folder"
          Target="/music"
          Default="/path/to/music"
          Mode="rw"
          Description="Host path for your music; one mapping per Plex library path."
          Type="Path" Display="always" Required="true" />

  <Config Name="Music Folder 2"
          Target="/music2"
          Default="/path/to/music2"
          Mode="rw"
          Description="(Optional) Second music folder."
          Type="Path" Display="always" Required="false" />

  <Config Name="Music Folder 3"
          Target="/music3"
          Default="/path/to/music3"
          Mode="rw"
          Description="(Optional) Third music folder."
          Type="Path" Display="always" Required="false" />

  <Config Name="Dupe Output Volume"
          Target="/dupes"
          Default="/path/to/music/dupes"
          Mode="rw"
          Description="Host path where duplicate albums will be moved."
          Type="Path" Display="always" Required="true" />

  <!-- ────────────── PORT MAPPING ────────────── -->
  <!-- Container **always** listens on 5005; user chooses HOST port -->
  <Config Name="WebUI Port"
          Target="5005"
          Default="5005"
          Mode="tcp"
          Description="Host port to map to container port 5005 (Web UI)."
          Type="Port" Display="always" Required="true" />
</Container>
